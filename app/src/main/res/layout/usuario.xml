<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_phone_q7cm6s97sy3udtlw"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nome Completo -->
        <EditText
            android:id="@+id/edtNomeCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#C8F0ECEC"
            android:hint="Nome Completo"
            android:inputType="textPersonName" />

        <!-- Login -->
        <EditText
            android:id="@+id/edtLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Login"
            android:inputType="text" />

        <!-- Senha -->
        <EditText
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Senha"
            android:inputType="textPassword" />

        <!-- Nível de Acesso -->
        <Spinner
            android:id="@+id/spNivelAcesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EF1831"
            android:text="Salvar Usuário"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
